{
  "manifest_version": 2,
  "version": "0.1.2",
  "name": "PDF Combine - Convert and Merge",
  "description": "Convert and merge multiple files with different formats into a single PDF document",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },

  "permissions": [
    "storage",
    "downloads",
    "*://api2.online-convert.com/*"
  ],

  "homepage_url": "http://add0n.com/convert-to.html?from=pdf",

  "browser_action":{
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },

  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
