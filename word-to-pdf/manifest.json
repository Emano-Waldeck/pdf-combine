{
  "manifest_version": 2,
  "version": "0.1.1",
  "name": "Word to PDF",
  "description": "Convert MS Word documents (doc and docx) into PDF format",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  },

  "permissions": [
    "storage",
    "downloads",
    "*://api2.online-convert.com/*"
  ],

  "homepage_url": "http://add0n.com/convert-to.html?from=doc",

  "browser_action":{
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },

  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
